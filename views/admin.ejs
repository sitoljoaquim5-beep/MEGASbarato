<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Painel Admin</title>
<link rel="stylesheet" href="/style.css">
</head>
<body>
<h2>Painel do Administrador</h2>

<table border="1" cellpadding="5" cellspacing="0">
<tr>
  <th>ID</th>
  <th>Número</th>
  <th>Pacote</th>
  <th>Comprovativo</th>
  <th>Status</th>
  <th>Ação</th>
</tr>
<% pedidos.forEach(p => { %>
<tr>
  <td><%= p.id %></td>
  <td><%= p.numero %></td>
  <td><%= p.pacote %></td>
  <td>
    <% if (p.comprovativo !== "Whatsapp") { %>
      <a href="/uploads/<%= p.comprovativo %>" target="_blank">Ver</a>
    <% } else { %>
      Whatsapp
    <% } %>
  </td>
  <td><%= p.status %></td>
  <td>
    <% if (p.status !== "Aprovado") { %>
      <form method="POST" action="/aprovar/<%= p.id %>">
        <button type="submit">Aprovar</button>
      </form>
    <% } else { %>
      ✅
    <% } %>
  </td>
</tr>
<% }) %>
</table>
</body>
</html>
